<!DOCTYPE html>
<html lang="es">
<head>
  <style>
    /* === ESTILOS GRILLA Y TARJETAS === */
    .grid-noticias {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 25px;
      margin-top: 30px;
    }

    /* Tarjeta que funciona como link completo */
    .card-noticia {
      background-color: #002a52; /* Azul corporativo */
      color: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0,0,0,0.15);
      transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
      text-decoration: none; /* Quitar subrayado del link */
      display: flex;
      flex-direction: column;
      height: 100%;
      position: relative;
    }

    .card-noticia:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.3);
      background-color: #003a70; /* Un poco m√°s claro al pasar el mouse */
    }

    .card-imagen {
      width: 100%;
      height: 200px;
      object-fit: cover;
      background-color: #001f3f; /* Fondo por si no carga */
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .card-body {
      padding: 20px;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .card-titulo {
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 10px;
      color: white;
      line-height: 1.3;
    }

    .card-subtitulo {
      font-size: 0.95rem;
      color: #b3d7ff; /* Celeste claro para subt√≠tulo */
      margin-bottom: 15px;
      flex-grow: 1; /* Empuja la fecha hacia abajo */
    }

    .card-fecha {
      font-size: 0.8rem;
      color: #8bb9e8; /* Gris azulado */
      margin-top: auto;
      text-align: right;
    }

    /* === ESTILO BOT√ìN GRANDE (Tipo Organigrama) === */
    .boton-crear-grande {
      display: inline-block;
      min-width: 280px;
      padding: 25px;
      text-align: center;
      text-decoration: none;
      color: white;
      border-radius: 8px;
      background-color: #28a745; /* Verde para acci√≥n de Crear */
      transition: transform 0.2s, box-shadow 0.2s;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    .boton-crear-grande:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(0,0,0,0.2);
      background-color: #218838;
    }
  </style>
</head>
<body>

  <h2>Noticias y Comunicados</h2>
  <p>Ent√©rate de las √∫ltimas novedades de Transworld.</p>

  <% if (typeof can !== 'undefined' && can.noticias_write) { %>
    <div style="margin-top: 20px; margin-bottom: 10px;">
      <a class="boton-crear-grande" href="/noticias/crear">
        <div style="font-size: 2rem; margin-bottom: 5px;">‚úçÔ∏è</div>
        <strong style="font-size: 1.2rem; display: block; margin-bottom: 5px;">Publicar Nueva Noticia</strong>
        <span style="display:block; font-weight:normal; font-size:0.9rem; opacity: 0.9;">
          Comparte un comunicado con el equipo
        </span>
      </a>
    </div>
  <% } %>

  <% if (!noticias || noticias.length === 0) { %>
    <div style="margin-top: 40px; text-align: center; color: #666;">
      <p>No hay noticias publicadas a√∫n.</p>
    </div>
  <% } else { %>
    <div class="grid-noticias">
      <% noticias.forEach(n => { %>
        <a href="/noticias/<%= n.id %>" class="card-noticia">
          
          <% if (n.imagen) { %>
            <img src="<%= n.imagen %>" alt="Portada" class="card-imagen">
          <% } else { %>
            <div class="card-imagen" style="display: flex; align-items: center; justify-content: center; opacity: 0.5;">
              <span style="font-size: 3rem;">üì∞</span>
            </div>
          <% } %>

          <div class="card-body">
            <div class="card-titulo"><%= n.titulo %></div>
            
            <% if (n.subtitulo) { %>
              <div class="card-subtitulo"><%= n.subtitulo %></div>
            <% } %>

            <div class="card-fecha">
              <%= new Date(n.fecha_creacion).toLocaleDateString('es-CL', { day: '2-digit', month: 'short', year: 'numeric' }) %>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  <% } %>

</body>
</html>