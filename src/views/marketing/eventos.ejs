<style>
  /* ESTILOS TIPO HOME PARA EVENTOS */
  .eventos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px;
    margin-top: 25px;
  }

  .card-evento-modern {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    border: 1px solid #dde3ec;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .card-evento-modern:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0,0,0,0.15);
  }

  .evento-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    flex-grow: 1; /* Ocupa el espacio disponible */
  }

  .evento-img-container {
    width: 100%;
    height: 180px; /* Misma altura que en home */
    background-color: #f4f6f9;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #eee;
  }

  .evento-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }

  .card-evento-modern:hover .evento-img {
    transform: scale(1.05);
  }

  .folder-icon-placeholder {
    font-size: 3.5rem;
    color: #cbd5e0;
  }

  .evento-info {
    padding: 15px;
    background: #fff;
  }

  .evento-titulo {
    font-size: 1.1rem;
    font-weight: 700;
    color: #444;
    margin-bottom: 5px;
    line-height: 1.3;
  }

  .evento-desc {
    font-size: 0.85rem;
    color: #777;
    margin-top: 5px;
  }

  /* Footer de la tarjeta para bot√≥n eliminar */
  .evento-actions {
    padding: 10px 15px;
    background-color: #f9f9f9;
    border-top: 1px solid #eee;
    text-align: right;
  }

  .btn-delete {
    background: none;
    border: none;
    color: #dc3545;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    padding: 0;
  }
  .btn-delete:hover {
    text-decoration: underline;
  }
</style>

<div class="contenedor">
  <h2 class="page-title">Eventos y Galer√≠as</h2>
  <p class="page-description">Selecciona un evento para ver su galer√≠a de fotos.</p>

  <% if (can.eventos_write) { %>
    <div style="margin-bottom: 20px;">
      <a class="boton-opcion" href="/marketing/eventos/nuevo">
        + Crear nuevo evento
        <span>Generar una nueva carpeta para subir fotos.</span>
      </a>
    </div>
  <% } %>

  <% if (!eventos || eventos.length === 0) { %>
    <p class="no-data">No hay eventos creados por el momento.</p>
  <% } else { %>
    
    <div class="eventos-grid">
      <% eventos.forEach(function(ev) { %>
        <div class="card-evento-modern">
          
          <a href="/marketing/eventos/<%= ev.slug %>" class="evento-link" title="Ver galer√≠a de <%= ev.nombre %>">
            <div class="evento-img-container">
              <% if (ev.imagen) { %>
                <img src="<%= ev.imagen %>" alt="<%= ev.nombre %>" class="evento-img">
              <% } else { %>
                <div class="folder-icon-placeholder">üìÅ</div>
              <% } %>
            </div>
            
            <div class="evento-info">
              <div class="evento-titulo"><%= ev.nombre %></div>
              <% if (ev.descripcion) { %>
                <div class="evento-desc">
                  <%= ev.descripcion.length > 60 ? ev.descripcion.substring(0, 60) + '...' : ev.descripcion %>
                </div>
              <% } %>
            </div>
          </a>

          <% if (can.eventos_write) { %>
            <div class="evento-actions">
              <form action="/marketing/eventos/<%= ev.slug %>/eliminar" method="POST" onsubmit="return confirm('¬øEst√°s seguro? Se eliminar√° el evento y TODAS sus fotos.');" style="margin:0;">
                <button type="submit" class="btn-delete">Eliminar evento</button>
              </form>
            </div>
          <% } %>

        </div>
      <% }) %>
    </div>

  <% } %>
</div>