<div class="contenedor">
  <h2>Noticias Recientes</h2>
  <div class="grid-noticias" style="display: grid; gap: 20px; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));">
    <% noticias.forEach(n => { %>
      <div class="panel" style="padding: 0; overflow: hidden;">
        <img src="<%= n.imagen %>" style="width: 100%; height: 150px; object-fit: cover;">
        <div style="padding: 15px;">
          <h3><a href="/noticias/<%= n.id %>" style="color: #003a70;"><%= n.titulo %></a></h3>
          <p><%= n.subtitulo %></p>
        </div>
      </div>
    <% }) %>
  </div>
</div>