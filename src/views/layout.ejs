<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo || "Intranet" %></title>
    <link rel="stylesheet" href="/css/intranet.css">
    
    <style>
      body {
        background: url('/img/fondo-home.png') no-repeat center center fixed !important;
        background-size: cover !important;
      }
      main { 
        background: transparent !important; 
        min-height: 80vh; 
      }
    </style>
</head>

<body>

<% 
  // 1. Detectar usuario disponible (Sesi√≥n o BD)
  const currentUser = (typeof usuario !== 'undefined' && usuario) ? usuario : ((typeof user !== 'undefined' && user) ? user : null);

  // 2. Determinar el nombre a mostrar con seguridad
  let displayName = 'Usuario';
  if (currentUser) {
    if (currentUser.username) {
      // Caso: Objeto de sesi√≥n (auth.js)
      displayName = currentUser.username;
    } else if (currentUser.first_name) {
      // Caso: Objeto de base de datos (users table)
      displayName = currentUser.first_name + (currentUser.last_name ? ' ' + currentUser.last_name : '');
    } else if (currentUser.nombre) {
      // Caso: Otras tablas (ej. personas)
      displayName = currentUser.nombre;
    }
  }
%>

<header>
  <div class="header-inner">
    
    <div class="logo-container">
      <a href="/" title="Ir al Inicio">
        <img src="/img/PNG-LOGO-TW-2.png" alt="Transworld" class="logo-tw">
      </a>
    </div>

    <nav class="main-nav">      
      <div class="nav-item"><a href="/">Inicio</a></div>
      <div class="nav-item"><a href="/noticias">Noticias</a></div>

      <div class="nav-item">
        <a href="/procesos">Procesos y Documentos</a>
        <div class="dropdown-menu">
          <a href="/procesos/procedimientos">Procedimientos</a>
          <a href="/procesos/protocolos">Protocolos</a>
          <a href="/procesos/reglamento">Reglamento interno</a>
        </div>
      </div>

      <div class="nav-item">
        <a href="/personas">Personas</a>
        <div class="dropdown-menu">
          <a href="/personas/organigrama">Organigrama</a>
        </div>
      </div>

      <div class="nav-item"><a href="/sistemas/tickets">Ticketera</a></div>

      <div class="nav-item">
        <a href="/marketing">Marketing y Eventos</a>
        <div class="dropdown-menu">
          <a href="/marketing/eventos">Galer√≠a de eventos</a>
        </div>
      </div>
      
      <% if (currentUser && currentUser.role === 'admin') { %>
        <a href="/roles">Roles</a>
      <% } %>
    </nav>

    <% if (currentUser) { %>
      <div class="nav-user">
        <a href="/perfil" title="Ir a mi perfil" class="user-name" style="display: flex; align-items: center; gap: 8px;">
          
          <% if (currentUser.foto) { %>
            <img src="<%= currentUser.foto %>" alt="Foto" style="width: 32px; height: 32px; border-radius: 50%; object-fit: cover; border: 2px solid #fff;">
          <% } else { %>
            <div style="width: 32px; height: 32px; border-radius: 50%; background: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center; color: #fff; font-size: 0.9rem; border: 1px solid rgba(255,255,255,0.5);">
              <%= displayName.charAt(0).toUpperCase() %>
            </div>
          <% } %>

          <strong><%= displayName %></strong>
        </a>
      </div>
    <% } %>

  </div>
</header>

<main>
    <%- body %>
</main>

<footer>
  <div class="footer-content">
    <div class="footer-icon">
      <a href="/" title="Ir al Inicio" style="text-decoration: none; color: inherit;">üè†</a>
    </div>
    
    <div class="footer-col">
      <a href="/procesos/protocolos">Protocolos</a>
      <a href="/procesos/reglamento">Reglamento interno</a>
      <a href="/procesos/procedimientos">Procedimientos</a>
    </div>
    
    <div class="footer-col">
       <a href="https://www.transworld.cl/nosotros/" target="_blank" rel="noopener noreferrer">Nosotros</a>
    </div>

    <div class="footer-col">
      <a href="/noticias">Noticias</a>
    </div>

    <div class="footer-col">
      <a href="/marketing/eventos">Eventos</a>
    </div>

    <div class="footer-col">
      <a href="/sistemas/tickets">Soporte</a>
    </div>
    
    <div class="footer-col">
      <strong>Links externos</strong>
      <a href="https://transworld.mirexmas.com/" target="_blank" rel="noopener noreferrer">Rex+</a>
      <a href="https://www.achs.cl/" target="_blank" rel="noopener noreferrer">ACHS</a>
    </div>
  </div>
</footer>

</body>
</html>